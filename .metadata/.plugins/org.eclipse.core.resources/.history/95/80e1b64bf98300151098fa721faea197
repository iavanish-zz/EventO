package iavanish;

import java.sql.SQLException;

import com.mysql.jdbc.Connection;
import com.mysql.jdbc.Statement;

public class DatabaseWrite extends DatabaseRead {

	public static boolean insertUser(String rollNo, String name, String password, boolean typeOfUser, String emailID) {
    	
        boolean insertStatus = false;
        Connection connection = null;
        
        try {
            try {
                connection = createConnection();
            } 
            catch(Exception e) {
                e.printStackTrace();
            }
            Statement stmt = (Statement)connection.createStatement();
            String query = "INSERT into user(RollNo, Name, Password, TypeOfUser, EmailID) values('" + rollNo + "'," + "'" + name + "','" + password + "','" + (typeOfUser ? 1 : 0) + "','" + emailID + "')";
            int records = stmt.executeUpdate(query);
            if(records > 0) {
                insertStatus = true;
            }
        } 

        catch(SQLException sqlE) {
            sqlE.printStackTrace();
        }
        catch(Exception e) {
            e.printStackTrace();
        }
        finally {
            if(connection != null) {
            	try {
            		connection.close();
            	}
            	catch(SQLException sqlE) {
            		sqlE.printStackTrace();
            	}
            	catch(Exception e) {
            		e.printStackTrace();
            	}
            }
        }
        
        return insertStatus;
        
    }
	
	public static boolean updateUser(String rollNo, String name, String password, boolean typeOfUser, String emailID) {
    	
        boolean updateStatus = false;
        Connection connection = null;
        
        try {
            try {
                connection = createConnection();
            } 
            catch(Exception e) {
                e.printStackTrace();
            }
            Statement stmt = (Statement)connection.createStatement();
            String query = "UPDATE user SET Name = " + name + ", Password = " + password + ", TypeOfUser = " + (typeOfUser ? 1 : 0) + ", EmailID = " + emailID + " WHERE RollNo = " + rollNo;
            int records = stmt.executeUpdate(query);
            if(records > 0) {
                updateStatus = true;
            }
        } 
        
        catch(SQLException sqlE) {
            sqlE.printStackTrace();
        }
        catch(Exception e) {
            e.printStackTrace();
        }
        finally {
            if(connection != null) {
            	try {
            		connection.close();
            	}
            	catch(SQLException sqlE) {
            		sqlE.printStackTrace();
            	}
            	catch(Exception e) {
            		e.printStackTrace();
            	}
            }
        }
        
        return updateStatus;
        
    }
	
}
